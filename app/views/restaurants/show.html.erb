<div class="container p-3 mx-3 my-3">
  <h1><%= @restaurant.name %></h1>
</div>

<div class="container p-3 mx-5 my-3">
  <div id="resaurant p-3 mx-5 my-3">
    <%= render @restaurant %>
  </div>
</div>

<div class="container p-3 mx-5 my-3">
  <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-primary' %>
  <%= link_to 'Back to list', restaurants_path, class: 'btn btn-primary' %>
  <%= link_to "View review", restaurant_reviews_path(@restaurant), class: 'btn btn-primary ' %>
</div>
