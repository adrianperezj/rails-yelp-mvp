<div class="container p-3 mx-5 my-3">
  <h1>Restaurants</h1>
    <%= link_to "New restaurant", new_restaurant_path, class: 'btn btn-primary' %>
</div>

<div class="container">
  <div id="resaurants">
    <% @restaurants.each do |restaurant| %>
      <div class="card rounded shadow p-3 mx-5 my-3">
        <%= render restaurant %>
        <%= link_to "View restaurant", restaurant_path(restaurant), class: 'btn btn-primary ' %>
      </div>
    <% end %>
  </div>
</div>
